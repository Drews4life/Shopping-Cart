<%- include("../_layouts/adminheader") %>
<h2 class="page-title">Edit page</h2> 
<a href="/admin/pages" class="btn btn-primary">Back to all pages</a>
<br><br>

<form method="post" action="/admin/pages/edit-page/<%= slug %>">
    <div class="form-group">
        <label for="">Title</label>
        <input type="text" class="form-control"  placeholder="Title" name="title" value="<%= title %>" autofocus  autocomplete="off">
    </div>

    <div class="form-group">
        <label for="">Slug</label>
        <input type="text" class="form-control"  placeholder="Slug" name="slug" value="<%= slug %>" autocomplete="off">
    </div>

    <div class="form-group">
        <label for="">Content</label>
        <textarea name="content" id="ta" placeholder="content" class="form-control" cols="30" rows="10" ><%= content %></textarea>
    </div>

    <input type="hidden" name="id" value="<%= id %>">
    <button class="btn btn-default">Save changes</button>
</form>
<%- include("../_layouts/adminfooter") %>